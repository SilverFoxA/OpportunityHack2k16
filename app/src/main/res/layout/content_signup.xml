<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="in.devmetric.opportunityhackcwdr.Signup"
    tools:showIn="@layout/activity_signup">

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/name"
        android:hint="Full Name" />

        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:id="@+id/contact"
        android:hint="Contact" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:ems="10"
        android:id="@+id/email"
        android:hint="Email" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/password1"
        android:hint="Password" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/age"
        android:hint="Age" />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/qualification"
        android:hint="Qualification" />
     <TextView
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Preferences :"
         android:textSize="22dp"
         >

     </TextView>

    <CheckBox
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:text="life-skills "
        android:id="@+id/option1"
        android:checked="false"
        />
        <CheckBox
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="vocational skills"
            android:id="@+id/option2"
            android:checked="false"
            />
        <CheckBox
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="supplementary education"
            android:id="@+id/option3"
            android:checked="false"
            />

        <CheckBox
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:text="sexual education"
            android:id="@+id/option4"
            android:checked="false"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="By Clicking on Register you agree to the Terms and Conditions"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:id="@+id/register"
        android:layout_gravity="center_horizontal"
        android:enabled="false" />

 </LinearLayout>


</android.support.v4.widget.NestedScrollView>
